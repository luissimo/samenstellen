<section class="container" id="main">

  <!-- Start Survey container -->
  <div id="survey_container">

    <div id="top-wizard">
      <strong>Voortgang <span id="location"></span></strong>
      <div id="progressbar"></div>
      <div class="shadow"></div>
    </div><!-- end top-wizard -->

    <form name="example-1" id="wrapped" >
      <div id="middle-wizard">
        <div class="step">
          <div class="row">
            <h2 class="col-md-12 text-center">Vertel eens over jezelf:</h2><br/>
            <div class="col-md-6">
              <ul class="data-list">
                <li><input type="text" name="firstname" class="required form-control" placeholder="Voornaam"></li>
                <li><input type="email" name="email" class="required form-control" placeholder="E-mailadres"></li>
              </ul>
              <ul class="data-list floated clearfix">
                <li><input name="gender" type="radio" class="required check_radio" value="Male"><label class="label_gender"> Man</label></li>
                <li><input name="gender" type="radio" class="required check_radio" value="Female"><label class="label_gender"> Vrouw</label></li>
              </ul>
            </div><!-- end col-md-6 -->

            <div class="col-md-6">

              <ul class="data-list">
                <li id="age"><input type="text" name="age" class="required form-control" placeholder="Leeftijd"></li>
                <li><input name="length" type="text" class="required form-control" placeholder="Lengte in cm"></li>
                <li><input name="weigth" type="text" class="required form-control" placeholder="Gewicht in kg"></li>
              </ul>

            </div><!-- end col-md-6 -->
          </div><!-- end row -->

        </div><!-- end step-->


        <div class="step row">
          <div class="col-md-10">
            <h3>Welk formaat boxspring zou je willen?</h3>
            <ul class="data-list-2">
              <li><input name="rate" type="radio" class="required check_radio" value="Not Satisfied"><label>Super King Size (200cm breed)</label></li>
              <li><input name="rate" type="radio" class="required check_radio" value="Quite Satisfied"><label>King Size (Standaard) (180cm breed)</label></li>
              <li><input name="rate" type="radio" class="required check_radio" value="Satisfied"><label>Queen Size (160cm breed)</label></li>
              <li><input name="rate" type="radio" class="required check_radio" value="Completely Satisfied"><label>Twijfelaar (140cm breed)</label></li>
            </ul>
          </div>
        </div><!-- end step -->

        <div class="step row">
          <div class="col-md-10">
            <h3>How did you hear about our company?</h3>
            <ul class="data-list-2">
              <li><input name="question_1[]" type="checkbox" class="required check_radio" value="Google"><label>Google</label></li>
              <li><input name="question_1[]" type="checkbox" class="required check_radio" value="A friend of mine"><label>A friend of mine</label></li>
              <li><input name="question_1[]" type="checkbox" class="required check_radio" value="Print advertise"><label>Print advertise</label></li>
              <li><input name="question_1[]" type="checkbox" class="required check_radio" value="Newspaper"><label>Newspaper</label></li>
            </ul>
          </div>
        </div><!-- end step -->

        <div class="step row">
          <div class="col-md-10">
            <h3>Do you think to suggest our company to a friend or parent?</h3>
            <ul class="data-list-2 clearfix">
              <li><input name="question_2" type="radio" class="required check_radio" value="No"><label>No</label></li>
              <li><input name="question_2" type="radio" class="required check_radio" value="Maybe"><label>Maybe</label></li>
              <li><input name="question_2" type="radio" class="required check_radio" value="Probably"><label>Probably </label></li>
              <li><input name="question_2" type="radio" class="required check_radio" value="100% Sure"><label>100% Sure</label></li>
              <li><strong>In no, please describe with few words why</strong><textarea name="message_suggest_no" class="form-control"></textarea></li>
            </ul>
          </div>
        </div><!-- end step -->

        <div class="submit step" id="complete">
          <i class="icon-check"></i>
          <h3>Survey complete! Thank you for you time.</h3>
          <button type="submit" name="process" class="submit">Submit the survey</button>
        </div><!-- end submit step -->

      </div><!-- end middle-wizard -->

      <div id="bottom-wizard">
        <button type="button" name="backward" class="backward">Vorige</button>
        <button type="button" name="forward" class="forward">Volgende</button>
      </div><!-- end bottom-wizard -->
    </form>

  </div><!-- end Survey container -->
</section><!-- end section main container -->