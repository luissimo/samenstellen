%section#main.container
  #survey_container_result_advice
    #middle-wizard-result
      .wrapper-v4
        .v4-bordered
          .specs-boxs
            .box-title.title-v4.text-center#advies
              = t('results.titles.header_advice')
            %ul
              - if double_mattress_two_complaints? || double_mattress_two_complaints2?
                %li
                  .head-title-v4
                    Drukverlagend matras
                    %span.question_label_icon_wrapper
                      = question_icon_md(t("results.explanations.complaints"))
                  .li-holder
                    .li-content
                      .text-content
                        - if double_mattress_two_complaints? && double_mattress_two_complaints2?
                          .title-smaller= @both_persons_names
                          .text-v4
                            = t("advice.complaints_duo_both")
                          %br
                        - elsif double_mattress_two_complaints? && !double_mattress_two_complaints2?
                          .title-smaller= @person_1_name
                          .text-v4
                            = t("advice.complaints_duo")
                          %br
                        - elsif !double_mattress_two_complaints? && double_mattress_two_complaints2?
                          .title-smaller= @person_2_name
                          .text-v4
                            = t("advice.complaints_duo")
                      .icon-holder-right
                        .icon
                          = image_tag("medisch-matras.png", class: 'img-responsive')
              %li
                .head-title-v4
                  Comfort matras
                  %span.question_label_icon_wrapper
                    = question_icon_md(t("results.explanations.comfort"))
                .li-holder
                  .li-content
                    .icon-holder-left
                      .icon
                        = image_tag("comfort.png", class: 'img-responsive')
                    .text-content
                      .title-smaller= @person_1_name
                      .text-v4
                        = @comfort_text
                      %br
                      .title-smaller= @person_2_name
                      .text-v4
                        = @comfort_text_2
              %li
                .head-title-v4
                  Elasticiteit matras
                  %span.question_label_icon_wrapper
                    = question_icon_md(t("results.explanations.elasticity"))
                .li-holder
                  .li-content
                    .text-content
                      .title-smaller= @person_1_name
                      .text-v4
                        = @elasticity_text
                      %br
                      .title-smaller= @person_2_name
                      .text-v4
                        = @elasticity_text_2
                    .icon-holder-right
                      .icon
                        = image_tag("elasticiteit.png", class: 'img-responsive')
              %li
                .head-title-v4
                  Stevigheid matras
                  %span.question_label_icon_wrapper
                    = question_icon_md(t("results.explanations.firmness"))
                .li-holder
                  .li-content
                    .icon-holder-left
                      .icon
                        = image_tag("stevigheid.png", class: 'img-responsive')
                    .text-content
                      .title-smaller= @person_1_name
                      .text-v4
                        = @firmness_text
                      %br
                      .title-smaller= @person_2_name
                      .text-v4
                        = @firmness_text_2
              %li
                .head-title-v4
                  Warmte-regulatie matras
                  %span.question_label_icon_wrapper
                    = question_icon_md(t("results.explanations.heat_regulation"))
                .li-holder
                  .li-content
                    .text-content
                      .title-smaller= @person_1_name
                      .text-v4
                        = @heat_regulation_text
                      %br
                      .title-smaller= @person_2_name
                      .text-v4
                        = @heat_regulation_text_2
                    .icon-holder-right
                      .icon
                        = image_tag("warmte-regulatie.png", class: 'img-responsive')
                  .checkout_button.title-v4.text-center
                    %a.btn-primary.btn-success.btn-block{href: afrekenen_path}
                      = t("general.button.continue")
