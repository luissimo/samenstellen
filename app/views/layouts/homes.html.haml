  %body
    / Page Holder
    .page-holder
      /
        \=======================================
        \==Start  Nav section==
        \=======================================
      %nav.navbar.main-navigation.navbar-fixed-top.has-shadow
        .container
          .navbar-header
            %button.navbar-toggle.collapsed{"data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Navigatie
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: "/"}
              = image_tag('weblogo1_350x75.svg', width: '250px', height: '70px')
          #navbar.collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                %a.js-scroll-trigger{href: root_url} Home
              %li
                %a.js-scroll-trigger{href: new_mattress_url} Eenpersoonsmatras
              %li
                %a.js-scroll-trigger{href: hoeveel_personen_url} Tweepersoonsmatras
              %li
                %a.js-scroll-trigger{href: over_ons_url} Over ons
              %li
                %a.js-scroll-trigger{href: contact_url} Contact
      /
