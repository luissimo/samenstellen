%section#main.container
  / Start Survey container
  #survey_container
    #top-wizard
      %strong
        Voortgang
        %span#location
      #progressbar
      .shadow
    / end top-wizard
    = form_for @mattress do |f|
      #middle-wizard
        .step
          .row
            %h2.col-md-12.text-center Stel jezelf eens voor
            %br/
            .col-md-6
              %ul.data-list
                %li= f.text_field :name, class: 'required form-control', placeholder: 'Naam'
                %li= f.number_field :age, class: 'required form-control', placeholder: 'Leeftijd'
                %li= f.email_field :email, class: 'required form-control', placeholder: 'E-mailadres'
            / end col-md-6
            .col-md-6
              %ul.data-list
                %li= f.text_field :weight, class: 'required form-control', placeholder: 'Gewicht'
                %li= f.number_field :length, class: 'required form-control', placeholder: 'Lengte'
              %ul.data-list.floated.clearfix
                %li
                  %input.required.check_radio{:name => "gender", :type => "radio", :value => "Male"}/
                  %label.label_gender Man
                %li
                  %input.required.check_radio{:name => "gender", :type => "radio", :value => "Female"}/
                  %label.label_gender Vrouw
              %br/
              %br/
            / end col-md-6
          / end row
        / end step
        .step.row
          .col-md-6
            %h3 In welke positie slaap je (of in welke positie wordt je normaal gesproken wakker) *
            %ul.data-list-2
              %li
                = f.radio_button :sleep_position, 'Rug', class: 'required check_radio', name: 'sleep_position'
                = f.label :sleep_position_rug, 'Rug'
              %li
                = f.radio_button :sleep_position, 'Zij', class: 'required check_radio', name: 'sleep_position', value: 'Zij'
                = f.label :sleep_position_zij, 'Zij'
              %li   
                = f.radio_button :sleep_position, 'Buik', class: 'required check_radio', name: 'sleep_position'
                = f.label :sleep_position_buik, 'Buik'
          .col-md-6
            %h3 Heb je  tijdens het opstaan weleens nek of rugpijn? *
            %ul.data-list-2
              %li
                = f.radio_button :neck_or_back_pain, 'Nee', class: 'required check_radio', name: 'neck_or_back_pain'
                = f.label :neck_or_back_pain_no, 'Nee'
              %li
                = f.radio_button :neck_or_back_pain, 'Soms', class: 'required check_radio', name: 'neck_or_back_pain'
                = f.label :neck_or_back_pain_sometimes, 'Soms'
              %li   
                = f.radio_button :neck_or_back_pain, 'Altijd', class: 'required check_radio', name: 'neck_or_back_pain'
                = f.label :neck_or_back_pain_always, 'Altijd' 
        / end step
        .step.row
          .col-md-4.col-md-offset-4
            %h3 Wat is je lichaamsvorm? *
            %ul.data-list-2
              %li
                = f.radio_button :body_shape, 'A: Rechthoek: Redelijk gelijke verhouding schouders, taille en heupen', class: 'required check_radio', name: 'body_shape'
                = f.label :body_shape_a, 'A: Rechthoek'
              %li
                = f.radio_button :body_shape, 'B: Peerfiguur: Smalle schouders, brede heupen, beetje taille', class: 'required check_radio', name: 'body_shape'
                = f.label :body_shape_b, 'B: Peerfiguur'
              %li   
                = f.radio_button :body_shape, 'C: Zandloperfiguur: Brede schouders, brede heupen en smalle taille', class: 'required check_radio', name: 'body_shape'
                = f.label :body_shape_c, 'C: Zandloperfiguur' 
              %li
                = f.radio_button :body_shape, 'D: Omgekeerde driehoek: Brede schouders, weinig heup, beetje taille', class: 'required check_radio', name: 'body_shape'
                = f.label :body_shape_d, 'D: Omgekeerde driehoek'
              %li   
                = f.radio_button :body_shape, 'E: Appelfiguur: Grote taille/buik, smallere schouders en heupen', class: 'required check_radio', name: 'body_shape'
                = f.label :body_shape_e, 'E: Appelfiguur' 
        / end step
        .step.row
          .col-md-4.col-md-offset-4
            %h3 Heb je medische klachten?(bv. allergie, apneu, hernia, reuma) Zo ja, vul deze hieronder in.
            %ul.data-list-2
              %li
                = f.text_field :diseases, class: 'form-control', placeholder: '...'
        / end step
        .step.row
          .col-md-10
            %h3 Welk formaat matras wil je (Breedte)?
            %ul.data-list-2
              %li
                = f.radio_button :body_shape, 'A: KINGSIZE', class: 'required check_radio', name: 'mattress_size'
                = f.label :body_shape_a, 'A: KINGSIZE'
              %li
                = f.radio_button :body_shape, 'B: MEDIUM', class: 'required check_radio', name: 'mattress_size'
                = f.label :body_shape_b, 'B: MEDIUM'
              %li   
                = f.radio_button :body_shape, 'C: SMALL', class: 'required check_radio', name: 'mattress_size'
                = f.label :body_shape_c, 'C: SMALL' 
        / end step
        / end step
        #complete.submit.step
          %i.icon-check
          %h3 Dit waren alle vragen, bekijk het resultaat door op de knop hieronder te klikken.
          = f.submit 'Bekijk het resultaat..', class: 'btn btn-block btn-info submit', name: 'process'
        / end submit step
      / end middle-wizard
      #bottom-wizard
        %button.backward{:name => "backward", :type => "button"} Vorige
        %button.forward{:name => "forward", :type => "button"} Volgende
      / end bottom-wizard
  / end Survey container
/ end section main container