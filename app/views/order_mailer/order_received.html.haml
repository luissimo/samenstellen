%h1 HOERRRRRA nieuwe bestelling!
%h2
  Ordernummer:
  = @details[:order_number]
%h3= @details[:type]
%hr/

%h3 Klantgegevens:
%hr/
%p
  %strong Voornaam:
  = @details[:first_name]
%p
  %strong Voornaam:
  = @details[:last_name]
%p
  %strong Telefoonnummer:
  = @details[:phone]
%p
  %strong Email:
  = @details[:email]
%p
  %strong Adres:
  = @details[:address]
%p
  %strong Adres-toevoeging:
  = @details[:address_addition]
%p
  %strong Postcode:
  = @details[:zip_code]
%p
  %strong Stad:
  = @details[:city]
%p
  %strong Verdieping:
  = @details[:floor]
%p
  %strong Is er een lift?
  = @details[:elevator]
%p
  %strong Oude matras meenemen?
  = @details[:retour_old_mattress]
%p
  %strong Gebruikte betaalmethode:
  = @details[:payment_method]

%p
  %strong COMMENT/NOTITIE:
  = @details[:comment]

- if @details[:address_ship]
  %br/
  %h4 Andere Verzendadres:
  %p= @details[:address_ship]
  %p= @details[:address_addition_ship]
  %p= @details[:zip_code_ship]
  %p= @details[:city_ship]

%hr/
%h4 Persoon 1:
%p
  %strong Naam:
  = @answers[:name]
%p
  %strong Geslacht:
  = @answers[:gender]
%p
  %strong Leeftijd:
  = @answers[:age]
%p
  %strong Gewicht:
  = @answers[:weight]
%p
  %strong Lengte:
  = @answers[:length]
